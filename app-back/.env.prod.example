# Production Environment Configuration
# Copy this to .env.prod and fill in values
# NEVER commit .env.prod to version control!

# =============================================================================
# SUPABASE (Production Project)
# =============================================================================
SUPABASE_URL=https://your-prod-project.supabase.co
SUPABASE_KEY=your-prod-anon-key
SUPABASE_SERVICE_KEY=your-prod-service-role-key

# Database URL (from Supabase dashboard -> Settings -> Database)
DATABASE_URL=postgresql://postgres:[password]@db.[project-ref].supabase.co:5432/postgres

# =============================================================================
# N8N (Production Instance)
# =============================================================================
N8N_API_URL=https://n8n.example.com
N8N_API_KEY=your-prod-n8n-api-key

# =============================================================================
# GITHUB
# =============================================================================
GITHUB_TOKEN=ghp_your-github-token
GITHUB_REPO_OWNER=your-org
GITHUB_REPO_NAME=n8n-workflows
GITHUB_BRANCH=main

# =============================================================================
# AUTH0 (Production Tenant)
# =============================================================================
AUTH0_DOMAIN=your-prod-tenant.auth0.com
AUTH0_API_AUDIENCE=https://api.n8nops.com
AUTH0_CLIENT_ID=your-prod-client-id
AUTH0_CLIENT_SECRET=your-prod-client-secret

# =============================================================================
# STRIPE (Live Mode)
# =============================================================================
# Use Stripe LIVE keys for production
STRIPE_SECRET_KEY=sk_live_your-live-key
STRIPE_PUBLISHABLE_KEY=pk_live_your-live-key
STRIPE_WEBHOOK_SECRET=whsec_your-live-webhook-secret
STRIPE_PRO_PRICE_ID_MONTHLY=price_live_pro_monthly
STRIPE_PRO_PRICE_ID_YEARLY=price_live_pro_yearly

# =============================================================================
# EMAIL (Production SMTP)
# =============================================================================
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASSWORD=your-sendgrid-api-key
SMTP_FROM_EMAIL=noreply@n8nops.com
SMTP_FROM_NAME=WorkflowOps

# =============================================================================
# URLS
# =============================================================================
FRONTEND_URL=https://app.n8nops.com

# =============================================================================
# SECURITY
# =============================================================================
SECRET_KEY=generate-a-strong-unique-secret-for-production
